@model StudentClassLibrary.StudentCourse

@{
    ViewData["Title"] = "EnrollStudent";
}

<h1>Enroll Student in a Course</h1>

<div class="row">
    <div class="col-md-6">
        <form asp-action="EnrollStudent" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Dropdown for selecting a student -->
            <div class="form-group">
                <label for="StudentID">Select Student</label>
                <select asp-for="StudentID" class="form-control" asp-items="ViewBag.Students">
                    <option value="">-- Select Student --</option>
                </select>
                <span asp-validation-for="StudentID" class="text-danger"></span>
            </div>

            <!-- Dropdown for selecting a course -->
            <div class="form-group">
                <label for="CourseID">Select Course</label>
                <select asp-for="CourseID" class="form-control" asp-items="ViewBag.Courses">
                    <option value="">-- Select Course --</option>
                </select>
                <span asp-validation-for="CourseID" class="text-danger"></span>
            </div>

            <!-- Submit button -->
            <div class="form-group">
                <input type="submit" value="Enroll" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>